<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bbbbbb"
    android:textAlignment="center"
    android:textColor="#000000"
    android:textSize="10pt"
    android:text="@string/tutorial_title_1" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/tutorial_body_1"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.39"
                android:background="#bbbbbb"
                android:text="@string/tutorial_title_checklist"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="10pt" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:buttonTint="#1d4e89"
                android:text="I am able to meet my most crucial payments e.g. rent" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:buttonTint="#1d4e89"
                android:text="I am aware of all the other ways in which I spend money" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:buttonTint="#1d4e89"
                android:text="I have money left over which I can afford to use for enjoyment" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#388c00"
                    android:layout_margin="10dp"
                    android:text="Home" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#388c00"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:text="Next" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>